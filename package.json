{
  "name": "npm-frontend-build-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for frontend development using npm scripts.",
  "author": "Yu Kanamori <y.kinmori@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uknmr/npm-frontend-build-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/uknmr/npm-frontend-build-boilerplate/issues"
  },
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "npm-scripts"
  ],
  "scripts": {
    "browserify": "browserify --entry src/scripts/app.js --transform babelify > dist/scripts/bundle.js",
    "uglify": "uglifyjs --compress warnings=false --mangle --output dist/scripts/bundle.min.js -- dist/scripts/bundle.js",
    "serve": "browser-sync start --server --serveStatic dist --files 'dist/styles/*.css, dist/scripts/*.js, **/*.html'",
    "build:css": "postcss --config .postcssrc.json --dir dist/styles src/styles/*.css",
    "build:js": "mkdirp dist/scripts && npm run browserify && npm run uglify",
    "watch": "npm run serve & npm run watch:css & npm run watch:js",
    "watch:css": "npm run build:css -- --watch --map",
    "watch:js": "mkdirp dist/scripts && watchify --entry src/scripts/app.js --transform babelify --outfile 'exorcist dist/scripts/bundle.js.map > dist/scripts/bundle.js' --debug --verbose",
    "clean": "npm run clean:css & npm run clean:js",
    "clean:css": "rimraf dist/styles/*",
    "clean:js": "rimraf dist/scripts/*",
    "lint:css": "stylelint 'src/styles/**/*css'",
    "lint:js": "eslint src/scripts"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.1.1",
    "csswring": "^5.1.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "exorcist": "^0.4.0",
    "mkdirp": "^0.5.1",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^9.0.0",
    "rimraf": "^2.5.4",
    "stylelint": "^7.6.0",
    "stylelint-config-qiita": "^1.0.0",
    "uglify-js": "^2.7.5",
    "watchify": "^3.7.0"
  }
}
